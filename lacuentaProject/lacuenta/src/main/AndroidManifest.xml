<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.blanco.lacuenta"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.blanco.lacuenta.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.blanco.lacuenta.SettingsActivity"
            android:label="Configuraciones">
            <intent-filter>
                <action android:name="org.blanco.intent.action.SETTINGS" />
                <category android:name="android.intent.category.DEFAULT" />"
            </intent-filter>
        </activity>
        <provider
                android:authorities="org.blanco.lacuenta.db.splitscontentprovider"
                android:name="org.blanco.lacuenta.db.SPLITSContentProvider"/>
    </application>

</manifest>
