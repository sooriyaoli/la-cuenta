<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="org.blanco.lacuenta">

    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="16"/>

    <application android:allowBackup="true" android:icon="@drawable/icon" android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:label="@string/app_name" android:name="org.blanco.lacuenta.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="Configuraciones" android:name="org.blanco.lacuenta.SettingsActivity">
            <intent-filter>
                <action android:name="org.blanco.intent.action.SETTINGS"/>
                <category android:name="android.intent.category.DEFAULT"/>"
            </intent-filter>
        </activity>
    </application>

</manifest>
